<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yonkoma</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Yonkoma</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="navbar-brand btn btn-outline-light mr-2" asp-area="Indetity" asp-page="/Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-page="/Manga1">Манга</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-page="/Manhva1">Манхва</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-page="/Manhwa1">Манъхуа</a>
                    </li>
                    <li class="nav-item ml-5">
                        <a class="navbar-brand" asp-area="" asp-page="/Orders/Order">Заказ</a>
                    </li>
                </ul>
                <form class="form-inline mr-5 mt-md-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Поиск" aria-label="Поиск">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Поиск</button>
                </form>
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <a class="navbar-brand btn btn-outline-light mr-2" asp-area="Indetity" asp-page="/Account/Login">Вход</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand btn btn-outline-light mr-2" asp-area="" asp-page="/Account/Registr">Регистрация</a>
                    </li>
                    
                </ul>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white navbar-dark bg-dark">
        <div class="container">
            &copy; 2020 - Yonkoma
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
